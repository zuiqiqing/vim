snippet /       单行注释
	# ${1}
snippet //      多行注释
	=pod${1}
	=cut
snippet -       分隔注释
	# -------------------------------${1}
# 编译选项
snippet u       版本约束
	use ${1};
snippet us      严格模式
	use strict;${1}
snippet uw      开启警告
	use warnings;${1}
snippet ud      报告详细警告信息
	use diagnostics;${1}
# 复合结构
snippet f       子程序
	sub ${1:f_name}
	{
	    ${2}
	}
# 流程控制
snippet if      if
	if (${1}) {
	    ${2}
	}
snippet elif    elsif
	elsif (${1}) {
	    ${2}
	}
snippet el      else
	else {
	    ${1}
	}
snippet fo      for
	for (${1}) {
	    ${2}
	}
snippet fe      foreach
	foreach ${1}(${2}) {
	    ${3}
	}
snippet wh      while
	while (${1}) {
	    ${2}
	}
# 单个关键字
snippet ch      chomp
	chomp;${1}
snippet df      defined
	defined(${1});${2}
snippet p       输出（不自动换行）
	print ${1};
snippet .       ->
	->${1}
